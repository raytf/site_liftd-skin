---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Carousel from '~/components/ui/Carousel.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const slides = [
  {
    title: 'Liftera HIFU Treatment',
    subtitle: 'Advanced Face Lifting',
    content: 'Experience non-surgical face lifting with High-Intensity Focused Ultrasound technology. Targets deep skin layers for natural-looking results.',
    backgroundImage: {
      src: 'https://images.unsplash.com/photo-1598970605070-a8fd7c4eaf75?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      alt: 'HIFU Treatment Background',
    },
  },
  {
    title: 'SlimLux Body Contouring',
    subtitle: 'Targeted Fat Reduction',
    content: 'Revolutionary non-invasive body sculpting technology that helps eliminate stubborn fat cells and contours your body naturally.',
    backgroundImage: {
      src: 'https://images.unsplash.com/photo-1532446785438-1a6986a2f6f7?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      alt: 'Body Contouring Background',
    },
  },
  {
    title: 'Radio Frequency Skin Tightening',
    subtitle: 'Collagen Stimulation',
    content: 'Advanced RF technology that stimulates collagen production, tightens skin, and reduces the appearance of fine lines and wrinkles.',
    backgroundImage: {
      src: 'https://images.unsplash.com/photo-1616394584738-fc6e612e71b9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      alt: 'RF Treatment Background',
    },
  },
  {
    title: 'Vacuum Suction',
    subtitle: 'Enhanced Circulation',
    content: 'Improve lymphatic drainage and blood circulation while reducing the appearance of cellulite with our advanced vacuum therapy.',
    backgroundImage: {
      src: 'https://images.unsplash.com/photo-1515377905703-c4788e51af15?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      alt: 'Vacuum Therapy Background',
    },
  },
];
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <Carousel
      slides={[...slides, ...slides]}
      showPagination={true}
      showNavigation={false}
      autoplay={false}
      loop={true}
      centeredSlides={true}
      spaceBetween={30}
      slidesPerView={3}
    />
  </div>
</WidgetWrapper>
