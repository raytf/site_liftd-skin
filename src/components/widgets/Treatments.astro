---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Carousel from '~/components/ui/Carousel.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const slides = [
  {
    title: 'Non-Surgical Facial Lifting',
    subtitle: 'HIFU (Our Specialty)',
    content:
      'Experience non-surgical face lifting with High-Intensity Focused Ultrasound technology. Targets deep skin layers for natural-looking results.',
    backgroundImage: {
      src: '~/assets/images/hifu/hifu_6.jpeg',
      alt: 'HIFU Treatment Background',
    },
  },
  {
    title: 'Body Contouring',
    subtitle: 'Ultrasound',
    content:
      'Revolutionary non-invasive body sculpting technology that helps eliminate stubborn fat cells and contours your body naturally.',
    backgroundImage: {
      src: '~/assets/images/ultrasound/body_contouring_9.jpg',
      alt: 'Body Contouring Background',
    },
  },
  {
    title: 'Skin Tightening',
    subtitle: 'Radio Frequency',
    content:
      'Advanced RF technology that stimulates collagen production, tightens skin, and reduces the appearance of fine lines and wrinkles.',
    backgroundImage: {
      src: '~/assets/images/rf/skin_tightening_face_05.jpg',
      alt: 'RF Treatment Background',
    },
  },
  {
    title: 'Vacuum Suction',
    subtitle: 'Enhanced Circulation',
    content:
      'Improve lymphatic drainage and blood circulation while reducing the appearance of cellulite with our advanced vacuum therapy.',
    backgroundImage: {
      src: '~/assets/images/vacuum_suction/vacuum_suction_8.jpg',
      alt: 'Vacuum Therapy Background',
    },
  },
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <Carousel
      slides={[...slides, ...slides]}
      showPagination={true}
      showNavigation={false}
      autoplay={false}
      loop={true}
      centeredSlides={true}
      spaceBetween={30}
      slidesPerView={3}
    />
  </div>
</WidgetWrapper>
