---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ImageCard from '~/components/ui/ImageCard.astro';
import type { Image, CallToAction } from '~/types';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const slides = [
  {
    id: 'facial-lifting',
    title: 'Facial Lifting',
    backgroundImage: {
      src: '~/assets/images/hifu/hifu_6.jpeg',
      alt: 'HIFU Treatment Background',
    } as Image,
    description:
      '<span class="font-bold">Our Specialty:</span> HIFU treatment that lifts and tightens skin by delivering focused energy to deep tissue layers.',
    benefits: [
      'Lifts and tightens sagging skin',
      'Reduces jowls and double chin',
      'Improves facial contour definition',
    ],
    action: {
      icon: 'cuida:open-in-new-tab-outline',
      text: 'Learn More',
      href: '/treatments/hifu-facial-lifting',
      variant: 'accent',
    } as CallToAction,
  },
  {
    id: 'body-contouring',
    title: 'Body Contouring',
    backgroundImage: {
      src: '~/assets/images/ultrasound/body_contouring_9.jpg',
      alt: 'Body Contouring Background',
    } as Image,
    description:
      'Ultrasound technology that breaks down fat cells for natural elimination, creating a more sculpted body shape.',
    benefits: [
      'Reduces fat in targeted areas',
      'Improves body shape and contour',
      'Maintains muscle tone during treatment',
    ],
    action: {
      icon: 'cuida:open-in-new-tab-outline',
      text: 'Learn More',
      href: '/treatments/ultrasound-body-contouring',
      variant: 'accent',
    } as CallToAction,
  },
  {
    id: 'skin-tightening',
    title: 'Skin Tightening',
    backgroundImage: {
      src: '~/assets/images/rf/skin_tightening_face_05.jpg',
      alt: 'RF Treatment Background',
    } as Image,
    description:
      'Radiofrequency treatment that stimulates collagen and elastin production for firmer, more youthful skin.',
    benefits: ['Improves skin texture and tone', 'Reduces appearance of stretch marks', 'Enhances skin elasticity'],
    action: {
      icon: 'cuida:open-in-new-tab-outline',
      text: 'Learn More',
      href: '/treatments/rf-skin-tightening',
      variant: 'accent',
    } as CallToAction,
  },
  // {
  //   id: 'cellulite-reduction',
  //   title: 'Cellulite Reduction',
  //   backgroundImage: {
  //     src: '~/assets/images/vacuum_suction/vacuum_suction_8.jpg',
  //     alt: 'Vacuum Therapy Background',
  //   } as Image,
  //   description: 'Vacuum therapy that stimulates blood flow and breaks down fat deposits for smoother, toned skin.',
  //   benefits: ['Reduces appearance of cellulite', 'Improves skin texture and firmness', 'Enhances muscle tone'],
  //   action: {
  //     icon: 'cuida:open-in-new-tab-outline',
  //     text: 'Learn More',
  //     href: '/treatments/vacuum-suction',
  //     variant: 'accent',
  //   } as CallToAction,
  // },
];
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
  revealAnimation={false}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
      {slides.map((slide) => <ImageCard {...slide} />)}
    </div>
  </div>
</WidgetWrapper>
