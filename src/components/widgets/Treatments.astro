---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Carousel from '~/components/ui/Carousel.astro';
import type { Image, CallToAction } from '~/types';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const slides = [
  {
    title: 'HIFU Facial Lifting',
    backgroundImage: {
      src: '~/assets/images/hifu/hifu_6.jpeg',
      alt: 'HIFU Treatment Background',
    } as Image,
    description:
      '<span class="font-bold">Our Specialty:</span> Non-surgical face lifting using High-Intensity Focused Ultrasound for natural-looking results.',
    benefits: ['Stimulates collagen production', 'Tightens and firms skin', 'No downtime required'],
    actions: [
      {
        text: 'Learn More',
        href: '/treatments/hifu',
        variant: 'accent',
      } as CallToAction,
      {
        text: 'See Results',
        href: '/treatments/hifu/results',
      } as CallToAction,
    ],
  },
  {
    title: 'Body Contouring',
    backgroundImage: {
      src: '~/assets/images/ultrasound/body_contouring_9.jpg',
      alt: 'Body Contouring Background',
    } as Image,
    description: 'Non-invasive body sculpting technology that eliminates stubborn fat cells naturally.',
    benefits: ['Targets stubborn fat cells', 'No recovery time needed', 'Long-lasting results'],
    actions: [
      {
        text: 'Learn More',
        href: '/treatments/body-contouring',
        variant: 'accent',
      } as CallToAction,
      {
        text: 'See Results',
        href: '/treatments/body-contouring/results',
      } as CallToAction,
    ],
  },
  {
    title: 'Skin Tightening',
    backgroundImage: {
      src: '~/assets/images/rf/skin_tightening_face_05.jpg',
      alt: 'RF Treatment Background',
    } as Image,
    description: 'Advanced RF technology that tightens skin and reduces fine lines and wrinkles.',
    benefits: ['Stimulates collagen growth', 'Reduces fine lines and wrinkles', 'Suitable for all skin types'],
    actions: [
      {
        text: 'Learn More',
        href: '/treatments/skin-tightening',
        variant: 'accent',
      } as CallToAction,
      {
        text: 'See Results',
        href: '/treatments/skin-tightening/results',
      } as CallToAction,
    ],
  },
  {
    title: 'Vacuum Suction',
    backgroundImage: {
      src: '~/assets/images/vacuum_suction/vacuum_suction_8.jpg',
      alt: 'Vacuum Therapy Background',
    } as Image,
    description: 'Advanced vacuum therapy that improves circulation and reduces cellulite appearance.',
    benefits: ['Improves lymphatic drainage', 'Reduces cellulite appearance', 'Promotes skin rejuvenation'],
    actions: [
      {
        text: 'Learn More',
        href: '/treatments/vacuum-suction',
        variant: 'accent',
      } as CallToAction,
      {
        text: 'See Results',
        href: '/treatments/vacuum-suction/results',
      } as CallToAction,
    ],
  },
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <Carousel
      slides={[...slides, ...slides]}
      showPagination={true}
      showNavigation={false}
      autoplay={false}
      loop={true}
      centeredSlides={true}
      spaceBetween={30}
      slidesPerView={3}
    />
  </div>
</WidgetWrapper>
