---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Carousel from '~/components/ui/Carousel.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const slides = [
  {
    title: 'Fine Lines and Wrinkles',
    subtitle: 'I want to look refreshed but still like myself',
    content: 'Reduce aging signs while maintaining your natural expressions and facial movement.',
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/beautiful-woman-with-perfect-skin_186202-7685.jpg',
      alt: 'Mature woman with smooth, glowing skin',
    },
  },
  {
    title: 'Acne Scarring and Texture',
    subtitle: 'Can anything really help with my acne scars and uneven skin texture?',
    content: 'Make your complexion visibly smoother and more even.',
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/close-up-beautiful-woman-face_186202-1931.jpg',
      alt: 'Woman with clear, smooth skin texture',
    },
  },
  {
    title: 'Natural Alternatives',
    subtitle: 'I want results without needles or constant touch-ups',
    content: "Experience natural, needle-free treatments that harness your body's own healing power.",
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/spa-treatment-concept-with-woman-face_23-2147782714.jpg',
      alt: 'Woman receiving natural skincare treatment',
    },
  },
  {
    title: 'Skin Laxity After Weight Loss',
    subtitle: "I've lost the weight, but my skin hasn't bounced back",
    content: 'Restore firmness and definition to your skin after weight loss.',
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/beautiful-woman-with-perfect-skin_186202-7685.jpg',
      alt: 'Confident woman with toned, firm skin',
    },
  },
  {
    title: 'Busy Professional Lifestyle',
    subtitle: 'I need effective treatments that fit my hectic schedule',
    content: 'Get effective results without long recovery times.',
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/beautiful-woman-with-perfect-skin_186202-7685.jpg',
      alt: 'Mother with glowing, rejuvenated skin',
    },
  },
  {
    title: 'Post-Pregnancy Changes',
    subtitle: 'Will my skin ever feel like mine again after having children?',
    content: "Restore your skin's natural elasticity and firmness without surgery.",
    backgroundImage: {
      src: 'https://img.freepik.com/free-photo/beautiful-woman-with-perfect-skin_186202-7685.jpg',
      alt: 'Mother with glowing, rejuvenated skin',
    },
  },
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <Carousel
      slides={[...slides, ...slides]}
      showPagination={true}
      showNavigation={false}
      autoplay={false}
      loop={true}
      centeredSlides={true}
      spaceBetween={30}
      slidesPerView={3}
    />
  </div>
</WidgetWrapper>
